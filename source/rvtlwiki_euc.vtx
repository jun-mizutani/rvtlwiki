:-------------------------------------------------
: Set REMOTE_ADDR
: in  s : バッファ先頭アドレス
: in  a : 32ビット整数のIPアドレス
: out s : IPアドレス文字列
:-------------------------------------------------
^SetADDR
   +sabcde
   b=a>>24
   c=(a>>16)&$FF
   d=(a>>8)&$FF
   e=a&$FF
   a=b !=^ToStr
   s(r)='.'
   a=c s=s+r+1 !=^ToStr
   s(r)='.'
   a=d s=s+r+1 !=^ToStr
   s(r)='.'
   a=e s=s+r+1 !=^ToStr
   s(r)=0
   -edcbas
]
