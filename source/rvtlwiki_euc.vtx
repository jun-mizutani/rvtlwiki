:-------------------------------------------------
: Concatinate string
:
:  x() : string1 (<255byte)
:  y() : string2 (<255byte)
: return
:  s() : string1+string2
:  r   : length
:-------------------------------------------------
^ConcatStr
   s*=x r=%
   +s
   s=s+r s*=y
   -s
   r=r+%
]
:
:-------------------------------------------------
: Merge string
:
:  x() : string1 (<255byte)
:  y() : string2 (<255byte)
: return
:  x() : string1 + string2
:  r   : length
:-------------------------------------------------
^MergeStr
   !=^StrLen             : r = length(x)
   +x
   x=x+r
   x*=y
   r=r+%
   -x
]
